view "public" {
  match-clients { any; };
  zone "example.com" { type secondary; file "zone.example.com"; primaries { 192.168.1.2; }; };
  zone "1.168.192.in-addr.arpa" { type secondary; file "zone.example.com.rev"; primaries { 192.168.1.2; }; };
};
